function tr {
    compinit -i
    if [ "$@" = "." ]; then
      D=${PWD##*/} && cd .. && trash $D || cd $D
    else 
      command trash "$@"
    fi
}

function brew-install() {
    brew install "$@"
    brew list >> ~/.programs
}

function brew {
    compinit -i
    if [[ "$1" == "install" && "$2" != '' ]]; then
      shift
      command brew install $@
      command brew list > ~/.programs
    elif [[ "$1" == "uninstall" && "$2" != '' ]]; then
      shift
      command brew uninstall $@
      command brew list > ~/.programs
    else 
      command brew $@
    fi
}
