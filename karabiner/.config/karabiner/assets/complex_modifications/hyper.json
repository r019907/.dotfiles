{
  "title": "Hyper",
  "rules": [
    {
      "description": "LeftCtrl --> Hyper (Ctrl + Cmd + Opt + Shift)",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": ["left_command", "left_option", "left_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "(disable sysdiagnose with cmd+shift+opt+ctrl+,)",
      "manipulators": [
        {
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": [],
          "type": "basic"
        }
      ]
    }
  ]
}
