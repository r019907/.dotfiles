{
  "title": "Keyboard Illumination",
  "rules": [
    {
      "description": "Option-F1 --> Decrement Illumination",
      "manipulators": [
        {
          "from": {
            "key_code": "f1",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f1",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["right_option"]
            }
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Option-F2 --> Increment Illumination",
      "manipulators": [
        {
          "from": {
            "key_code": "f2",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "illumination_increment"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f2",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["right_option"]
            }
          },
          "to": [
            {
              "key_code": "illumination_increment"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
