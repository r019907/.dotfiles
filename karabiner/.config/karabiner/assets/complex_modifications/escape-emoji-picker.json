{
  "title": "11 escape = emoji menu (command+control+space)",
  "rules": [
    {
      "description": "escape = emoji menu. (Simplifies default command + control + space)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_command", "left_control"]
            }
          ]
        }
      ]
    }
  ]
}
