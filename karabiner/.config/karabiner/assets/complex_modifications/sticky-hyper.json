{
  "title": "Sticky Hyper",
  "rules": [
    {
      "description": "Left Ctrl --> Sticky Hyper (Shift, Control, Option, Command)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "mandatory": [],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_control", "left_option", "left_command"],
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "sticky_modifier": {
                "left_shift": "on"
              }
            },
            {
              "sticky_modifier": {
                "left_control": "on"
              }
            },
            {
              "sticky_modifier": {
                "left_option": "on"
              }
            },
            {
              "sticky_modifier": {
                "left_command": "on"
              }
            }
          ]
        },
        {
          "sticky_modifier": {
            "{modifier_name}": "on | off | toggle"
          }
        }
      ]
    },
    {
      "title": "TEST!!!  Sticky Hyper",
      "rules": [
        {
          "description": "Left Ctrl --> Sticky Hyper (Shift, Control, Option, Command)",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "vk__left_control"
              },
              "to": [
                {
                  "set_variable": {
                    "name": "left_control_pressed",
                    "value": 1
                  }
                },
                {
                  "key_code": "vk__f13"
                }
              ],
              "to_after_key_up": [
                {
                  "set_variable": {
                    "name": "left_control_pressed",
                    "value": 0
                  }
                }
              ]
            },
            {
              "type": "basic",
              "from": {
                "key_code": "vk__f13"
              },
              "to": [
                {
                  "set_variable": {
                    "name": "f13_pressed",
                    "value": 1
                  }
                },
                {
                  "key_code": "left_control"
                }
              ],
              "to_after_key_up": [
                {
                  "set_variable": {
                    "name": "f13_pressed",
                    "value": 0
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
