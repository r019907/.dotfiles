{
  "title": "Sticky Hyper",
  "rules": [
    {
      "description": "LeftCtrl--> Sticky Hyper",
      "manipulators": [
        {
          "description": "LeftCtrl --> Sticky Hyper (Ctrl + Cmd + Opt + Shift)",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "left_contorl",
                "modifiers": {
                  "mandatory": [],
                  "optional": ["any"]
                }
              },
              "to": [
                {
                  "key_code": "left_shift",
                  "modifiers": ["left_control", "left_option", "left_command"],
                  "lazy": true
                }
              ],
              "to_if_alone": [
                {
                  "sticky_modifier": {
                    "left_shift": "toggle"
                  }
                },
                {
                  "sticky_modifier": {
                    "left_control": "toggle"
                  }
                },
                {
                  "sticky_modifier": {
                    "left_option": "toggle"
                  }
                },
                {
                  "sticky_modifier": {
                    "left_command": "toggle"
                  }
                }
              ]
            },
            {
              "description": "(disable sysdiagnose with cmd+shift+opt+ctrl+,)",
              "manipulators": [
                {
                  "from": {
                    "key_code": "comma",
                    "modifiers": {
                      "mandatory": ["command", "shift", "option", "control"]
                    }
                  },
                  "to": [],
                  "type": "basic"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
