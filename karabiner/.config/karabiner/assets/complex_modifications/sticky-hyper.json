{
  "title": "Sticky Hyper",
  "rules": [
    {
      "description": "Left Ctrl --> Sticky Hyper (Shift, Control, Option, Command)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "mandatory": [],
              "optional": ["any"]
            }
          },
          "to: [
            {
              "sticky_modifier": {
                "left_shift": "on"
              }
            },
            {
              "sticky_modifier": {
                "left_control": "toggle"
              }
            },
            {
              "sticky_modifier": {
                "left_option": "toggle"
              }
            },
            {
              "sticky_modifier": {
                "left_command": "toggle"
              }
            }
          ]
        }
      ]
    }
  ]
}
