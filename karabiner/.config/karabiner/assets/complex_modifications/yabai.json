{
  "title": "Yabai Ctrl+G",
  "rules": [
    {
      "description": "Ctrl+G to Sticky Meh with sticky",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "sticky_modifier": {
                "fn": "toggle"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "fn to sticky_fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn"
          },
          "to": [
            {
              "sticky_modifier": {
                "fn": "toggle"
              }
            }
          ]
        }
      ]
    }
  ]
}
