{
  "title": "10 Map Control + Option to Fn",
  "rules": [
    {
      "description": "10 Control + Option to Fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_control",
            "modifiers": {
              "optional": ["left_option", "right_option"]
            }
          },
          "to_if_alone": [
            {
              "key_code": "fn"
            }
          ]
        }
      ]
    },
    {
      "description": "fn to sticky_fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn"
          },
          "to": [
            {
              "sticky_modifier": {
                "fn": "toggle"
              }
            }
          ]
        }
      ]
    }
  ]
}
