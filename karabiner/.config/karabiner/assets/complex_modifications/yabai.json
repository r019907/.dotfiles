{
  "title": "111 Control + Option to Fn",
  "rules": [
    {
      "description": "111 Control + Option to Fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_control",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "fn"
            }
          ],
          "repeat": true
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": ["left_option", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "fn"
            }
          ],
          "repeat": true
        }
      ]
    }
  ]
}
