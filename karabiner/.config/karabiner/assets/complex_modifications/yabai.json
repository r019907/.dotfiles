{
  "title": "10 Map Control + Option to Fn",
  "rules": [
    {
      "description": "10 Control + Option to Fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "all": "key_code",
            "modifiers": {
              "mandatory": ["right_control"],
              "optional": ["right_option", "left_option"]
            }
          },
          "to": [
            {
              "apple_vendor_keyboard_key_code": "keyboard_fn"
            }
          ]
        }
      ]
    }
  ]
}
