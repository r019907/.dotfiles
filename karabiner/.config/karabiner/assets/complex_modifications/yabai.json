{
  "title": "10 Map Control + Option to Fn",
  "rules": [
    {
      "description": "10 Control + Option to Fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["left_option", "right_option"]
            }
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          },
          "to_if_held_down": [
            {
              "key_code": "fn"
            }
          ]
        }
      ]
    }
  ]
}
