{
  "title": "10 Map Control + Option to Fn",
  "rules": [
    {
      "description": "10 Control + LOption to Fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "fn",
              "repeat": false
            }
          ]
        }
      ]
    },
    {
      "description": "10 Control + ROption to Fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "fn",
              "repeat": false
            }
          ]
        }
      ]
    }
  ]
}
