{
  "title": "10 Map Control + Option to Fn",
  "rules": [
    {
      "description": "10 Control + Option to Fn",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "all": "key_code",
            "modifiers": {
              "mandatory": ["caps_lock"],
              "optional": ["right_option", "left_option"]
            }
          },
          "to": [
            {
              "key_code": "fn",
              "optional": "any"
            }
          ]
        }
      ]
    }
  ]
}
