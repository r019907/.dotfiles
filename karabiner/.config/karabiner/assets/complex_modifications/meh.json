{
  "title": "Sticky Meh",
  "rules": [
    {
      "description": "Ctrl+quote to Sticky Meh with sticky",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to_if_alone": [
            {
              "sticky_modifier": {
                "left_shift": "toggle"
              }
            },
            {
              "sticky_modifier": {
                "left_control": "toggle"
              }
            },
            {
              "sticky_modifier": {
                "left_option": "toggle"
              }
            }
          ]
        }
      ]
    }
  ]
}
