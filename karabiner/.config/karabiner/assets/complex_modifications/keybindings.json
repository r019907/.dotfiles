{
  "title": "Base config",
  "rules": [
    {
      "description": "Page up / Page down",
      "manipulators": [
        {
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["left_control", "left_command"]
            },
            "optional": ["any"]
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_control", "left_command"]
            },
            "optional": ["any"]
          },
          "to": [
            {
              "key_code": "page_down"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Map ctrl + [ to escape",
      "manipulators": [
        {
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "keyboard brightness (shift - f1/f2)",
      "manipulators": [
        {
          "from": {
            "key_code": "f1",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["right_shift"]
            }
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f2",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["right_shift"]
            }
          },
          "to": [
            {
              "key_code": "illumination_increment"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "keyboard brightness (shift - f1/f2)",
      "manipulators": [
        {
          "from": {
            "key_code": "f1",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["left_shift"]
            }
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f2",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["left_shift"]
            }
          },
          "to": [
            {
              "key_code": "illumination_increment"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Map ctrl+p/ctrl+n to arrow up/down",
      "manipulators": [
        {
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Map Control key to Hyper (Ctrl + Cmd + Opt + Shift) key",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": ["left_command", "left_option", "left_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Map CapsLock key to Control key",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_control"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Disable sysdiagnose with cmd+shift+opt+ctrl+,",
      "manipulators": [
        {
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": [],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Toggle CapsLock with double shift",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": ["right_shift"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_shift"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "right_shift"
            }
          ],
          "type": "basic"
        },
        {
          "description": "Shift Move Froward by 1 word",
          "manipulators": [
            {
              "from": {
                "key_code": "right_shift"
              },
              "to": [
                {
                  "key_code": "right_shift"
                }
              ],
              "to_if_alone": [
                {
                  "key_code": "right_arrow",
                  "modifiers": ["option"]
                }
              ],
              "type": "basic"
            }
          ]
        },
        {
          "description": "Shift Move Backward by 1 word",
          "manipulators": [
            {
              "from": {
                "key_code": "left_shift"
              },
              "to": [
                {
                  "key_code": "left_shift"
                }
              ],
              "to_if_alone": [
                {
                  "key_code": "left_arrow",
                  "modifiers": ["option"]
                }
              ],
              "type": "basic"
            }
          ]
        }
      ]
    },
    {
      "description": "Froward/Backward word navigation",
      "manipulators": [
        {
          "description": "Shift Move Froward by 1 word",
          "manipulators": [
            {
              "from": {
                "key_code": "right_shift"
              },
              "to": [
                {
                  "key_code": "right_shift"
                }
              ],
              "to_if_alone": [
                {
                  "key_code": "right_arrow",
                  "modifiers": ["option"]
                }
              ],
              "type": "basic"
            }
          ]
        },
        {
          "description": "Shift Move Backward by 1 word",
          "manipulators": [
            {
              "from": {
                "key_code": "left_shift"
              },
              "to": [
                {
                  "key_code": "left_shift"
                }
              ],
              "to_if_alone": [
                {
                  "key_code": "left_arrow",
                  "modifiers": ["option"]
                }
              ],
              "type": "basic"
            }
          ]
        }
      ]
    },
    {
      "description": "Change spacebar to left_shift. (Post spacebar if pressed alone)",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
