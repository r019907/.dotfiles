{
  "title": "Map ctrl + [ to escape",
  "rules": [
    {
      "description": "ctrl(caps_lock) + [ --> escape ",
      "manipulators": [
        {
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
