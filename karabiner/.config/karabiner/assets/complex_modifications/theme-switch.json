{
  "title": "Keyboard Illumination",
  "rules": [
    {
      "description": "F1-F2 --> Theme Swithing",
      "manipulators": [
        {
          "from": {
            "key_code": "f1",
            "modifiers": {
              "mandatory": ["f2"]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application "System Events" to tell appearance preferences to set dark mode to true'"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f1",
            "modifiers": {
              "mandatory": ["left_option"],
              "optional": ["right_option"]
            }
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
