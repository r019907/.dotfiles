{
  "title": "Theme Switch",
  "rules": [
    {
      "description": "F3 --> Theme Switching",
      "manipulators": [
        {
          "from": {
            "key_code": "f3",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["left_option"]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"System Events\" to tell appearance preferences to set dark mode to true'"
            },
            {
              "set_variable": {
                "name": "dark_mode",
                "value": true
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "dark_mode",
              "value": false
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f3",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["left_option"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "dark_mode",
                "value": false
              }
            },
            {
              "shell_command": "osascript -e 'tell application \"System Events\" to tell appearance preferences to set dark mode to false'"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "dark_mode",
              "value": true
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
