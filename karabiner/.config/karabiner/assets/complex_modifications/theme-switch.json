{
  "title": "Theme Switch",
  "rules": [
    {
      "description": "fn --> Theme Switching",
      "manipulators": [
        {
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "shell_command": ""
            },
            {
              "set_variable": {
                "name": "dark_mode",
                "value": "false"
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "dark_mode",
              "value": "true"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "dark_mode",
                "value": "true"
              }
            },
            {
              "shell_command": ""
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "dark_mode",
              "value": "false"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
