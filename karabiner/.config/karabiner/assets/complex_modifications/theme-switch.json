{
  "title": "Change media play/pause",
  "rules": [
    {
      "description": "Toggle Music play/pause with f3",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f3"
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"System Events\" to tell appearance preferences to set dark mode to true'"
            },
            {
              "set_variable": {
                "name": "dark",
                "value": true
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "dark",
              "value": true
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f3"
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"System Events\" to tell appearance preferences to set dark mode to false'"
            },
            {
              "set_variable": {
                "name": "dark",
                "value": false
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "dark",
              "value": false
            }
          ]
        }
      ]
    }
  ]
}
