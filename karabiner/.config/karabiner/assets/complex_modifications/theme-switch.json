{
  "title": "Theme Switch",
  "rules": [
    {
      "description": "F1-F2 --> Theme Switching",
      "manipulators": [
        {
          "from": {
            "key_code": "f3"
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"System Events\" to tell appearance preferences to set dark mode to true'"
            },
            {
              "set_variable": {
                "name": "dark_mode",
                "value": true
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "dark_mode",
              "value": false
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "f2"
          },
          "to": [
            {
              "set_variable": {
                "name": "dark_mode",
                "value": false
              }
            },
            {
              "shell_command": "osascript -e 'tell application \"System Events\" to tell appearance preferences to set dark mode to false'"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "dark_mode",
              "value": true
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
