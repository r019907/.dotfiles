{
  "title": "Tab Switch",
  "rules": [
    {
      "description": "ctrl+; --> cmd+shift+[",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["command", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "ctrl+' --> cmd+shift+]",
      "manipulators": [
        {
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["command", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "cmd+ctrl+; --> cmd+opt+shift+[",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["command", "option", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "cmd+ctrl+'--> cmd+opt+shift+]",
      "manipulators": [
        {
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["command", "option", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
