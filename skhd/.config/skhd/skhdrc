#shellcheck disable=all

cmd - h [
  "safari" : skhd -k ""
]

meh - a: terminal-notifier -message "Hello"

# change window focus within space
meh - j : yabai -m display --focus south | yabai -m window --focus south
meh - k : yabai -m display --focus north | yabai -m window --focus north
meh - h : yabai -m display --focus west | yabai -m window --focus west
meh - l : yabai -m display --focus east | yabai -m window --focus east

## Quickly restart the yabai launch agent
meh + alt - r : brew services restart yabai

## Close active application
meh - delete : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close)

# test notifier
#meh - x : terminal-notifier -message "meh - x"

meh - x : terminal-notifier -message "$(yabai -m query --windows --window | jq -re ".id")"

## swap window
meh - y : yabai -m window --swap west
# shift + alt - j : yabai -m window --swap south
# shift + alt - k : yabai -m window --swap north
meh - 0x21 : yabai -m window --swap east # 0x21 is the "[" key

## send window to monitor and follow focus
meh - u : /Users/maxkiselev/.config/yabai/moveWindowLeftAndFollowFocus.sh
meh - w : /Users/mkiselev/.config/yabai/moveWindowRightAndFollowFocus.sh

## focus display
meh - 1 : yabai -m window --display 1 yabai -m display --focus 1
meh - 2 : yabai -m window --display 2 yabai -m display --focus 2
meh - 3 : yabai -m window --display 3 yabai -m display --focus 3

## increase window size
meh - a : yabai -m window --resize left:-20:0
meh - s : yabai -m window --resize bottom:0:20
meh - w : yabai -m window --resize top:0:-20
meh - d : yabai -m window --resize right:20:0

